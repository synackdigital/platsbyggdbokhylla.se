<div class="page-header"><h1>Edit drawing</h1></div>

<% form_for(drawing, {action: path_to.drawing(drawing), method: 'PUT', id: "drawing_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('drawings/form.ejs', {locals: {form: form, drawing: drawing}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Update drawing', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.drawing(drawing), {class: 'btn'}) %>
    </div>
<% });%>